<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fase4_WebExterna</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Fase4_WebExterna.styles.css" asp-append-version="true" />
</head>
<body>

    <header class="military-header">
        <!-- Logo -->
        <img src="/images/logo.png" class="logo" alt="Laser Tag Logo" />

        <!-- Menú -->
        <nav class="header-nav">
            <a asp-page="/Index">Inicio</a>
            <a asp-page="/Experiencia">La experiencia</a>
            <a asp-page="/Instalaciones">Instalaciones</a>
            <a asp-page="/Reservations/Create">Reservar</a>

            @* SOLO si está logueado *@
            @if (User.Identity != null && User.Identity.IsAuthenticated)
            {
                <a asp-page="/Account/Profile">Perfil</a>
            }
        </nav>

        <!-- Botón derecho -->
        @if (User.Identity != null && User.Identity.IsAuthenticated)
        {
            <a asp-page="/Account/Logout" class="login-btn">Cerrar sesión</a>
        }
        else
        {
            <a asp-page="/Account/Login" class="login-btn">Iniciar sesión</a>
        }
    </header>

    <!-- CONTENIDO -->
    <main role="main">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Fase4_WebExterna -
            <a asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>